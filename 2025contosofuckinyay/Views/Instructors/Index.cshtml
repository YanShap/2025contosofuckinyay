@model _2025contosofuckinyay.Models.InstructorIndexData
@{
    ViewData["Title"] = "Õpetajad";
}
<h2>Õpetajad</h2>
<p>
    <a asp-action="Create">Sisesta Õpetaja</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Eesnimi</th>
            <th>Perekonna nimi</th>
            <th>Tööleasumiskuupäev </th>
            <th>Kabinet</th>
            <th>Kursused</th>
            <th>Eriala</th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Instructors)
        {
            string selectedRow = "";
            if (item.Id == (int?)ViewData["InstructorId"])
            {
                selectedRow = "table-success";

            }
            <tr class="@selectedRow">
                <td>@Html.DisplayFor(modelItem=>item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstMidName)</td>
                <td>@Html.DisplayFor(modelItem => item.HireDate)</td>
                <td>@Html.DisplayFor(modelItem => item.OfficeAssignment)</td>
                <td>@Html.DisplayFor(modelItem => item.CourseAssignments)</td>
                <td>@Html.DisplayFor(modelItem => item.Field)</td>

                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detailid</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Kustuta</a>
                </td>
            </tr>
        }
    </tbody>
</table>